{
    "name": "sottosviluppo/elcodi",
    "description": "Barebones Ecommerce functionality for Symfony",
    "keywords": [
        "elcodi",
        "symfony",
        "ecommerce",
        "components",
        "bundle"
    ],
    "type": "library",
    "license": "MIT",
    "support": {
        "email": "devs@elcodi.com",
        "forum": "https://gitter.im/elcodi/elcodi",
        "source": "https://github.com/elcodi/elcodi",
        "issues": "https://github.com/elcodi/elcodi/issues"
    },
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Aldo Chiecchia",
            "email": "aldo.chiecchia@befactory.es"
        },
        {
            "name": "The Awesome Elcodi Community",
            "homepage": "https://github.com/elcodi/elcodi/contributors"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",

        "symfony/http-kernel": "^2.7|^3.0",
        "symfony/dependency-injection": "^2.7|^3.0",
        "symfony/config": "^2.7|^3.0",
        "symfony/yaml": "^2.7|^3.0",
        "symfony/console": "^2.7|^3.0",
        "symfony/framework-bundle": "^2.7|^3.0",
        "symfony/class-loader": "^2.7|^3.0",
        "symfony/security": "^2.7|^3.0",
        "symfony/http-foundation": "^2.7|^3.0",
        "symfony/validator": "^2.7|^3.0",
        "symfony/process": "^2.7|^3.0",
        "symfony/event-dispatcher": "^2.7|^3.0",
        "symfony/expression-language": "^2.7|^3.0",
        "symfony/finder": "^2.7|^3.0",
        "symfony/browser-kit": "^2.7|^3.0",
        "symfony/routing": "^2.7|^3.0",
        "symfony/proxy-manager-bridge": "^2.7|^3.0",
        "symfony/twig-bundle": "^2.7|^3.0",
        "symfony/swiftmailer-bundle": "^2.3.8",
        "symfony/form": "^2.7|^3.0",
        "twig/twig": "^1.23",
        "ocramius/proxy-manager": "^1.0",

        "doctrine/common": "^2.5",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.5.0",
        "doctrine/doctrine-cache-bundle": "^1.0",
        "mmoreram/simple-doctrine-mapping": "^1.0",
        "mmoreram/symfony-bundle-dependencies": "^1.1.1",

        "mathiasverraes/money": "^1.3.0",
        "knplabs/knp-gaufrette-bundle": "^0.3.0",
        "predis/predis": "^1.0.1",
        "ircmaxell/password-compat": "^1.0",
        "guzzlehttp/guzzle": "^5.2",
        "mmoreram/extractor": "^1.2.0",
        "goodby/csv": "^1.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^2.2",
        "fabpot/php-cs-fixer": "1.11",
        "mmoreram/php-formatter": "1.1.0",
        "phpunit/phpunit": "4.8.19"
    },
    "autoload": {
        "exclude-from-classmap": [
            "src/**/Tests/"
        ],
        "psr-4": {
            "Elcodi\\": "src/Elcodi"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "scripts": {
        "check-style": [
            "bin/php-cs-fixer fix --config-file=.php_cs || true",
            "bin/php-formatter f:h:f src || true",
            "bin/php-formatter f:u:s src || true"
        ],
        "test": "phpunit"
    }
}
